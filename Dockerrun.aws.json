{
    {
      "name": "api",
      "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/app-api",
      "hostname": "api",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ]
    },
    {
      "name": "postgres",
      "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/app-postgres",
      "hostname": "postgres",
      "essential": true,
      "portMappings": [ 
        {
          "hostPort": 5432,
          "containerPort": 5432
        }
      ],
      "links": ["api"],
      "memory": 512
    }
  ]
}
